// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Image {
  id Int @id @default(autoincrement())
  name String
  path String
  extension String
  type String
}

model Quiz {
  id Int @id @default(autoincrement())
  name String
  type String
  description String @db.TextInput
  forms QuizForm[]
}

model QuizForm {
  id Int @id @default(autoincrement())
  type String
  quiz Quiz @relation(fields: [quiz_id], references: [id])
  quiz_id Int 
}

